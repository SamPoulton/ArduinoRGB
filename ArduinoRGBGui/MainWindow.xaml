<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuminanceGui" x:Class="LuminanceGui.MainWindow"
        mc:Ignorable="d"
        Title="Luminance" Height="450" Width="800" Background="#FF2E2E2E" Foreground="#FF7C7C7C" Loaded="WindowLoaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="DeviceEntryPanel" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Stretch" BorderBrush="{x:Null}" Background="#FF222222" MinWidth="204" Grid.Column="0">
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="Height" Value="Auto" />
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
        <TabControl Grid.Column="1" Background="{x:Null}" BorderBrush="{x:Null}">
            <TabItem Header="EditPanel" Visibility="Collapsed" Background="{x:Null}" BorderBrush="{x:Null}">
                <local:StaticEditPanel/>
            </TabItem>
            <TabItem Header="MessagePanel" Visibility="Collapsed"/>
            
        </TabControl>
    </Grid>
</Window>
