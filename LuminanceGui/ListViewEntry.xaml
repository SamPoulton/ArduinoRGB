<UserControl x:Class="LuminanceGui.ListViewEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LuminanceGui"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200" MinHeight="50" MinWidth="200" MaxHeight="50" MaxWidth="200">
    <Grid>
        <Label x:Name="DeviceName" Content="Test Device" Foreground="White" FontSize="18"/>
        <Label x:Name="ParentName" Content="COM1" Foreground="White" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        <Label x:Name="IndexName" Content="Index 0" Foreground="White" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Bottom" RenderTransformOrigin="1,0.5" FlowDirection="RightToLeft"/>
        <Label x:Name="EndpointType" Content="Standard" Foreground="White" FontSize="14" HorizontalAlignment="Right" RenderTransformOrigin="1,0.5" FlowDirection="RightToLeft"/>
    </Grid>
</UserControl>
